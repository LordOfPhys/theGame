<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:weightSum="1"
    android:background="@drawable/main_gradient">

    <LinearLayout
        android:layout_weight="0.9"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:gravity="center"
            android:singleLine="true"
            android:id="@+id/login_id_enter"
            android:background="@drawable/main_gradient"
            android:hint="Login"
            android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ 0123456789">
        </EditText>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"></Space>

        <EditText
            android:layout_width="match_parent"
            android:gravity="center"
            android:id="@+id/password_id_enter"
            android:background="@drawable/main_gradient"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ 0123456789"
            android:textColor="#000000"
            android:inputType="textPassword"
            android:hint="Password">
        </EditText>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"></Space>

        <Button
            android:id="@+id/btn_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:background="@drawable/background_item"
            android:text="Вход" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"></Space>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#000000"
            android:id="@+id/error_login_id">
        </TextView>

        <Button
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:background="@drawable/background_item"
            android:text="Вход через VK"
            android:id="@+id/test_vk">
        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="0.1">

        <Button
            android:id="@+id/btn_enter2reg"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:background="@drawable/background_item"
            android:text="Новый аккаунт">
        </Button>

    </LinearLayout>

</LinearLayout>